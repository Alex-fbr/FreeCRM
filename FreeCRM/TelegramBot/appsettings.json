{
  "BotConfig": {
    "Token": "token"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "Debug"
            },
            {
              "Name": "File",
              "Args": {
                "path": "D:\\logs\\FreeCRM.TelegramBot\\Log_.txt",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": "10485760",
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ]
  }
}
